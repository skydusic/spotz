<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="addup.fpcompany.com.addsup.DetailList">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:src="@drawable/blackstar" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/favorite"
                android:layout_marginBottom="5dp"/>


            <RelativeLayout
                android:id="@+id/detailLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewPager">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333" />

                <TextView
                    android:id="@+id/text1menu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/detailmenu1" />

                <TextView
                    android:id="@+id/text1Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/text1menu"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:padding="3dp"
                    android:text="" />

                <View
                    android:id="@+id/text1Line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text1Tv"
                    android:background="#333" />

                <TextView
                    android:id="@+id/text2menu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text1Line"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/detailmenu2" />

                <TextView
                    android:id="@+id/text2Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1Line"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/text2menu"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:padding="3dp"
                    android:text="" />

                <View
                    android:id="@+id/text2Line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text2Tv"
                    android:background="#333" />

                <TextView
                    android:id="@+id/text3menu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text2Line"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/detailmenu3" />

                <TextView
                    android:id="@+id/text3Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2Line"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/text1menu"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:padding="3dp"
                    android:text="" />

                <View
                    android:id="@+id/text3Line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text3Tv"
                    android:background="#333" />

                <TextView
                    android:id="@+id/text4menu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text3Line"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/detailmenu4" />

                <TextView
                    android:id="@+id/text4Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text3Line"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/text1menu"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:padding="3dp"
                    android:text="" />

                <View
                    android:id="@+id/text4Line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text4Tv"
                    android:background="#333" />

                <TextView
                    android:id="@+id/text5menu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text4Line"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/detailmenu5" />

                <TextView
                    android:id="@+id/text5Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text4Line"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/text1menu"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:padding="3dp"
                    android:text="" />

                <View
                    android:id="@+id/text5Line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text5Tv"
                    android:background="#333" />

                <View
                    android:id="@+id/verticalLine"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/text5Line"
                    android:layout_alignTop="@+id/text1menu"
                    android:layout_toEndOf="@+id/text1menu"
                    android:background="#333" />


                <TextView
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text5Line"
                    android:background="#88aaaaaa"
                    android:minHeight="280dp"
                    android:padding="25dp"
                    android:textSize="16sp" />


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>

    <include
        android:id="@+id/bottombar"
        layout="@layout/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
