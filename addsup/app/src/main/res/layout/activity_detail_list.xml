            <TextView
                android:id="@+id/contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager"
                android:minHeight="300dp"
                android:padding="25dp"
                android:textSize="16sp" />

            <View
                android:id="@+id/horizontalView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contents"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#a4a4a4" />

            <!--댓글기능-->
            <RelativeLayout
                android:id="@+id/commentLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalView"
                android:minHeight="100dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/commentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/comment"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/commentTv"
                    android:layout_toEndOf="@id/commentTv"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/insertLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commentCount"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/commentEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/edittext"
                        android:gravity="center_vertical"
                        android:minHeight="50dp"
                        android:padding="7dp"
                        android:textSize="15sp"
                        tools:ignore="RtlSymmetry" />

                    <Button
                        android:id="@+id/inputComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/commentEt"
                        android:text="@string/input"
                        android:textSize="12sp" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/commentRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/insertLay"
                    android:layout_marginTop="15dp"
                    android:visibility="gone" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/editCommentLay"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/editCommentEt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/edittext"
            android:minHeight="45dp"
            android:padding="7dp"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry"
            android:layout_weight="5"
            />

        <Button
            android:id="@+id/editCommentBt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="확인" />

    </LinearLayout>

    <include
        android:id="@+id/bottombar"
        layout="@layout/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
