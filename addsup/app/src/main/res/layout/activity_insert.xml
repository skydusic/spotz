<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="addup.fpcompany.com.addsup.insertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/blueback"
            android:gravity="center_vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/button_main_insert"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="@string/write"
                android:textColor="#fff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <TextView
                android:id="@+id/spinTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/spinner" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/spinTv" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/spinner1"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="13dp"
            android:paddingStart="13dp"
            android:paddingTop="13dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text1Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical"
                    android:text="@string/detailmenu1" />

                <EditText
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext"
                    android:minHeight="25dp"
                    android:minWidth="250dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp" />

                <TextView
                    android:id="@+id/text2Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/text1"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical"
                    android:minHeight="25dp"
                    android:text="@string/detailmenu2" />

                <EditText
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text1"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext"
                    android:minHeight="25dp"
                    android:minWidth="250dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp" />

                <TextView
                    android:id="@+id/text3Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/text2"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical"
                    android:text="@string/detailmenu3" />

                <EditText
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text2"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext"
                    android:minHeight="25dp"
                    android:minWidth="250dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp" />

                <TextView
                    android:id="@+id/text4Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/text3"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical"
                    android:text="@string/detailmenu4" />

                <EditText
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text3"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext"
                    android:minHeight="25dp"
                    android:minWidth="250dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp" />

                <TextView
                    android:id="@+id/text5Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/text4"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical"
                    android:text="@string/detailmenu5" />

                <EditText
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text4"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext"
                    android:minHeight="25dp"
                    android:minWidth="250dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingEnd="10dp"
            android:paddingStart="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/imgFind"
                android:gravity="center_vertical"
                android:text="@string/insertimage"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/imgFind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/imagefind" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horScrollView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="13dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imView5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imView6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imView7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="13dp">

            <TextView
                android:id="@+id/contentsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="1dp"
                android:paddingStart="5dp"
                android:text="@string/contents" />

            <EditText
                android:id="@+id/contentsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:inputType="text"
                android:minHeight="200dp"
                android:padding="5dp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
